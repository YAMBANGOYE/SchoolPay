                            <p class="card-subtitle">Les inscriptions recenment ajouté</p>
                        </div>
                        <div class="card-actions">
                            <a href="/inscriptions/create">
                            <button class="card-btn">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-right: 6px;">
                                    <line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/>
                                </svg>
                                Inscrire un eleve
                            </button>
                            </a>
                        
                        </div>
                    </div>
                    <div class="table-wrapper">
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>N° Facture</th>
                                    <th>Eleve</th>
                                    <th>Classes</th>
                                    <th>Responsable</th>
                                    <th>Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="eleves-body">
                                <!-- les couleurs du status change-->
                                {{#each Eleves}}
                                 <tr data-ecole="{{ecole.libelle}}">
                                    <td><div class="table-user"><div class="table-avatar" style="background: linear-gradient(135deg, var(--emerald-light), var(--emerald));">{{prenomCourt}}</div><div class="table-user-info"><span class="table-user-name">{{nom}}</span><span class="table-user-email">{{responsable.email}}</span></div></div></td>
