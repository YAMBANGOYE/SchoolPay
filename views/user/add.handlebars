                                <div class="form-group-settings">
                                    <label>Nom</label>
                                    <input type="text"  name="nom" placeholder="" >
                                </div>
                                <div class="form-group-settings">
                                    <label>Prénom</label>
                                    <input type="text" name="prenom" placeholder="" >
                                </div>
                                <div class="form-group-settings">
                                    <label>Username</label>
                                    <input type="text" name="username" placeholder="" >
                                </div>
                                <div class="form-group-settings">
                                    <label>Addresse mail </label>
                                    <input type="email" placeholder="" name="email">
                                </div>
                                <div class="form-group-settings">
                                    <label>Phone Number</label>
                                    <input type="tel" placeholder="" name="telephone">
                                </div>



                                <div class="form-group-settings">
                                    <label for="exampleFormControlSelect1" class="form-label">Status</label>
                                            <select class="settings-select" id="exampleFormControlSelect1" name="status">
                                                <option value="superadmin">Super-admin</option>
                                                <option value="admin">Administrateur</option>
                                                <option value="redponsable">Redponsable</option>
                                            </select>
                                </div>
                                <div class="form-group-settings full-width">
                                   
                                </div>
                                 <div class="form-group-settings">
                                    <label>Passwors</label>
                                    <input type="password" placeholder="" name="password">
                                </div>
                            </div>
                        </div>

                        <div class="settings-section">
                            <h3 class="settings-section-title">Preferences</h3>
                           
                            
                        </div>

                        <div class="btn-group">
